<div class="row">
  <aside class="col-md-4">
    <section>
    <h1><%= @user.name %></h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @created_events.try(:any?) %>
    <h3>Created Events (<%= @created_events.count %>)</h3>
    <ol>
      <%= render @created_events %>
    </ol>
    <% end %>
  </div>
  <div class="col-md-8">
    <% if @upcoming_events.try(:any?) %>
    <h3>Upcoming Events (<%= @upcoming_events.count %>)</h3>
    <ol class="microposts">
      <%= render @upcoming_events %>
    </ol>
    <% end %>
  </div>
  <div class="col-md-8">
    <% if @prev_events.try(:any?) %>
    <h3>Upcoming Events (<%= @prev_events.count %>)</h3>
    <ol>
      <%= render @prev_events %>
    </ol>
    <% end %>
  </div>
</div>